#include <array>
#include <string>
#include <algorithm>
#include <iostream>
using namespace std;

int main()
{
    cout << "Enter 5 marks for five subjects." << endl;
    int marks[5];
    int sum = 0;

    for (int i = 0; i < 5; i++)
    {
        cout << "Input the subject marks: " << endl;
        cin >> marks[i];
        
        while (cin.fail() || marks[i] > 100 || marks[i] < 0) {
            cout << "invalid command, enter the marks again\n";
            cin.clear();
            cin.ignore();
            cin >> marks[i];
        }

        sum = sum + marks[i];
    }
    cout << "Your average is: " << sum / 5 << endl;
}
